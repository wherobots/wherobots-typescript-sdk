{
  "extends": [
    "@tsconfig/node-lts/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": ["node_modules", "./dist"]
}
